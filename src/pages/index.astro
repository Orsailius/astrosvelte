---
import "../global.css";
import Layout from '../layouts/Layout.astro';
import GameShowcase from '../components/GameShowcase.svelte';

const games = [
	{"name":"🏁 Combo Racer", "body":"Collect powerups and combo them to win the race", "video":"https://www.youtube.com/embed/dQw4w9WgXcQ"},
	{"name":"⭐ Collectathon", "body":"Collect all the things", "video":"https://www.youtube.com/embed/dQw4w9WgXcQ"},
	{"name":"🎲 Board Game", "body":"Buy out the board and bankrupt other players to win", "video":"https://www.youtube.com/embed/dQw4w9WgXcQ"},
	{"name":"👻 Abandoned Asylum", "body":"Survive a night in the Abandoned Asylum", "video":"https://www.youtube.com/embed/dQw4w9WgXcQ"},
	{"name":"🔪 Murder Mystery", "body":"Find clues and Question witnesses to find the murderer", "video":"https://www.youtube.com/embed/dQw4w9WgXcQ"},
	{"name":"🧙 ARPG", "body":"Tag Team ARPG, swap in when other players die", "video":"https://youtube.com/embed/oPDMSB58NZM"}];
---
<Layout title="Welcome to Astro.">	
	<div class="hero h-[20rem] py-15 bg-base-200">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">🎉Birthday🎉 Prototype Showdown!</h1>
          <p class="py-10">Choose what game becomes this year's birthday game. 
            Every few weeks the games will be ranked, and we eliminate the last place game.</p>        
        </div>
      </div>
    </div>
	<GameShowcase games={games} client:load/>
	<div class="border-base-300 bg-base-200 rounded-b-box rounded-tr-box flex min-h-[7rem] min-w-screen max-w-screen flex-wrap items-center justify-center gap-2 overflow-x-hidden border bg-cover bg-top p-4 undefined">
   		<button class="btn btn-wide btn-primary"> Vote Now!</button>
	</div>
