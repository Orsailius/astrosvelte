---
export interface Props {
    name: string,
    body: string,
    video: string,
}
const {video, name, body} = Astro.props;
---
<div class="pb-5">
	<h2 class="text-4xl font-bold pt-5">
		{name}
		<span>&rarr;</span>
	</h2>
	<p class="text-lg pt-10 pb-10">
		{body}
	</p>
	<div>
		<iframe width="1000" height="600" src="https://www.youtube.com/embed/"{video}>
		</iframe>
	</div>
</div>